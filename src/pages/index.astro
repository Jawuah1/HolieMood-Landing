---
import Layout from "@layouts/Layout.astro";
import AppHero from "@components/sections/AppHero";
import Screenshots from "@components/sections/Screenshots";
import Features from "@components/sections/Features";
import FAQ from "@components/sections/FAQ";
import Lightbox from "@components/ui/Lightbox";
import SocialLinks from "@components/social/SocialLinks";
import { appData } from "../data/appData";

const {
	title,
	description,
	screenshots,
	features,
	faqs,
	storeLinks,
	socialLinks,
	logo,
} = appData;
---

<Layout title={title} description={description}>
  <main class="min-h-screen">
    <AppHero title={title} description={description} storeLinks={storeLinks} logo={logo} />

    <Screenshots images={screenshots} client:load />

    <Features features={features} />

    <FAQ items={faqs} client:visible />
    <SocialLinks links={socialLinks} />
  </main>
</Layout>

<Lightbox images={screenshots} client:load />

<style is:global>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
