---
import Layout from "@layouts/Layout.astro";
import Breadcrumbs from "@components/ui/Breadcrumbs";
import BackToTop from "@components/ui/BackToTop";
import { marked } from "marked";
import { appData } from "../data/appData";

const privacyModules = import.meta.glob("./content/privacy.md", {
	eager: true,
});
const privacyContent = Object.values(privacyModules)[0] as {
	rawContent: () => string;
};
const htmlContent = marked(privacyContent.rawContent());

const { title } = appData;
---

<Layout title={`${title} Â· Privacy Policy`} description={`Privacy Policy for ${title} application - How we handle and protect your data`}>
  <main class="min-h-screen max-w-3xl mx-auto px-6 py-24">
    <Breadcrumbs
      items={[{ label: "Privacy Policy" }]}
    />

    <div class="mt-8 p-8 md:p-12 bg-white rounded-3xl shadow-sm border border-gray-100">
      <article class="prose prose-lg prose-gray max-w-none hover:prose-a:text-brand-primary prose-a:transition-colors prose-headings:font-bold prose-headings:tracking-tight prose-img:rounded-xl">
        <div set:html={htmlContent} />
      </article>
    </div>
  </main>

  <BackToTop client:load />
</Layout>
