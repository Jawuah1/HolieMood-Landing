---
import PageAnimation from "@components/ui/PageAnimation";
import Footer from "@components/sections/Footer";
import Header from "@components/sections/Header";
import GithubCorner from "@components/ui/GithubCorner";
export interface Props {
	title: string;
	description?: string;
	showFooter?: boolean;
}

const { title, description } = Astro.props;
const { showFooter = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="faviconhm.png" />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    {
      description && (
        <>
          <meta name="description" content={description} />
          <meta property="og:description" content={description} />
        </>
      )
    }
    <meta name="theme-color" content="#000000" />
    <meta name="apple-itunes-app" content="app-id=6744375696, app-argument=https://holiemood.com" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <script>
      history.scrollRestoration = "manual";
      window.addEventListener("load", () => {
        window.scrollTo(0, 0);
      });
    </script>
  </head>
  <body class="bg-white font-montserrat text-black">
    <div class="mx-auto min-h-screen max-w-[800px]">
      <Header />
      <PageAnimation client:load>
        <main>
          <slot />
        </main>
        {showFooter && <Footer />}
      </PageAnimation>
    </div>
  </body>
</html>
